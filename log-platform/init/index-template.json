{
  "index_patterns": ["logs-*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "opendistro.index_state_management.policy_id": "logs-default-ism"
    },
    "mappings": {
      "properties": {
        "@timestamp": { "type": "date" },
        "service": { "properties": { "name": { "type": "keyword" } } },
        "log": { "properties": { "level": { "type": "keyword" } } },
        "message": { "type": "text" },
        "trace": { "properties": { "id": { "type": "keyword" } } },
        "labels": { "type": "object", "enabled": true },
        "fields": { "type": "object", "enabled": true }
      }
    }
  }
}

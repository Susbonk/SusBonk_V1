# Environment Configuration for SusBonk

# Database
POSTGRES_DB=susbonk
POSTGRES_USER=susbonk
# SECURITY: Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_RANDOM_PASSWORD

# Redis
# SECURITY: Generate with: openssl rand -hex 16
REDIS_PASSWORD=CHANGE_ME_GENERATE_RANDOM_PASSWORD

# OpenSearch
# SECURITY: Generate with: openssl rand -base64 32
OPENSEARCH_PASSWORD=CHANGE_ME_GENERATE_RANDOM_PASSWORD

# Backend
# SECURITY: Generate with: openssl rand -base64 32
SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_PASSWORD
ENVIRONMENT=development
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Django Admin
# SECURITY: Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=CHANGE_ME_GENERATE_DJANGO_SECRET
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@susbonk.local
# SECURITY: Use strong password (min 12 chars, mixed case, numbers, symbols)
DJANGO_SUPERUSER_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Frontend
VITE_API_URL=http://localhost:8000

# Database
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_HOST=pg-database
POSTGRES_PORT=5432

# Alerts
EMAIL_ENABLED=1
SMTP_SERVER=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your_brevo_user@smtp-brevo.com
SMTP_PASSWORD=your_brevo_smtp_key
ALERT_EMAIL_TO=your_email@example.com
ALERT_EMAIL_FROM=your_email@example.com
ALERT_DETAILS_LIMIT=10
ERROR_THRESHOLD=1
WARNING_THRESHOLD=3

# Postal
POSTAL_DB_PASSWORD=your_postal_db_password
POSTAL_RAILS_SECRET=generate_with_openssl_rand_hex_64

# Django Admin
DJANGO_ADMIN_USER=admin
DJANGO_ADMIN_EMAIL=admin@example.com
DJANGO_ADMIN_PASSWORD=your_admin_password

# Backend
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
JWT_SECRET=your_jwt_secret
JWT_ALG=HS256
JWT_ACCESS_TTL_MIN=10080

# Telegram Bot
TELOXIDE_TOKEN=your_telegram_bot_token
RUN_MODE=polling
LOG_LEVEL=info

# DB pool/timing
POSTGRES_MAX_CONNECTIONS=10
POSTGRES_MIN_CONNECTIONS=1
POSTGRES_CONNECT_TIMEOUT_SECS=8
POSTGRES_IDLE_TIMEOUT_SECS=60
POSTGRES_MAX_LIFETIME_SECS=1800
POSTGRES_SQLX_LOGGING=true
POSTGRES_SQLX_LOGGING_LEVEL=info

OS_INGEST_URL=http://log-ingest:8080/ingest
OS_URL=http://os01:9200
